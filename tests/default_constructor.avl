namespace -(
type maybe = (a):
    None
    | Just(a)

type either = (a, b):
    Left(a)
    | Right(b)

-- type instance infered
var name = Right("John Doe")

-- type instance on variable
var sex:maybe(string) = Just("Male")

-- type instance on expression
var age = Left(32):either(int,string)
