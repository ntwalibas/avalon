namespace -(
type gender = ():
    Male
    | Female
    | Queer

type maybe = (a):
    None
    | Just(a)

type user = (a):
    User(
        name    : string,
        age     : int,
        gender  : maybe(a)
    )

-- type instance infered
var john = User(
    name    = "John Doe",
    age     = 32,
    gender  = Just(Male)
)

-- type instance on variable
var jane:user(gender) = User(
    name    = "Jane Doe",
    age     = 32,
    gender  = Just(Female)
)

-- type instance on expression
var alexis = User(
    name    = "Alexis Doe",
    age     = 32,
    gender  = Just(Queer) -- replace this with None later
):user(int)
)-
